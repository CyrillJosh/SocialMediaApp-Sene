<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Socialmedia.MVVM.ViewModel"
             x:Class="Socialmedia.MVVM.View.Homepage"
             BackgroundColor="#00112e"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <vm:HomePageViewModel />
    </ContentPage.BindingContext>
    <Grid RowDefinitions="*,Auto">
        <!-- Main Content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Header -->
                <Label Text="Home Page"
                       FontAttributes="Bold"
                       FontSize="24"
                       Padding="10"
                       Margin="0,10,0,0"
                       TextColor="White"
                       HorizontalOptions="Center" />
                <!--#region Post -->
                <CollectionView ItemsSource="{Binding Posts}"
                                Margin="10"
                                SelectionMode="None">   
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#002366"
                                   CornerRadius="20"
                                   Padding="15"
                                   Margin="0,10"
                                   HasShadow="False">
                                <VerticalStackLayout Spacing="10">
                                    <Label Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label Text="{Binding Content}"
                                           FontSize="14"
                                           TextColor="White" />
                                    <!--<Label Text="User ID: {Binding UserId}"
                                           FontSize="12"
                                           TextColor="LightGray" />-->
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <!--#endregion-->
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="1"
          BackgroundColor="White"
          Padding="10"
          HeightRequest="60">
            <ImageButton Source="addpost.png"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     BackgroundColor="Transparent">
                <ImageButton.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToAddPostCommand}"/>
                </ImageButton.GestureRecognizers>
            </ImageButton>
        </Grid>
    </Grid>
