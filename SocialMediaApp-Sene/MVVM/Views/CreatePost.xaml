<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialMediaApp_Sene.MVVM.Views.CreatePost"
             xmlns:vm="clr-namespace:SocialMediaApp_Sene.MVVM.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundColor="#00112e"
             Shell.NavBarIsVisible="False"

             >
    <ContentPage.BindingContext>
        <vm:CreatePostVM />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Header -->
            <Label Text="CREATE POST"
                   FontAttributes="Bold"
                   FontSize="20"
                   VerticalOptions="Fill"
                   TextColor="#00112e"
                   BackgroundColor="#ffffff"
                   HorizontalOptions="Fill"
                   Padding="15"
                   Margin="-20,-20,-20,0"
                   HorizontalTextAlignment="Center"/>
            <!-- User Info -->
            <HorizontalStackLayout >
                <VerticalStackLayout VerticalOptions="Start" Padding="0,20">
                    <Label Text="Ner Jie Casas"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="Public"
                           FontSize="14"
                           TextColor="Gray"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
            <!-- Add Media -->
            <Label Text="Add Media"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="White"/>

            <Frame BackgroundColor="Transparent"
                   HeightRequest="200"
                   CornerRadius="10"
                   HorizontalOptions="Fill">
                <Grid Padding="0" Margin="0">
                    <toolkit:MediaElement Source="{Binding VideoPath}"
                              HeightRequest="200"
                              ShouldShowPlaybackControls="True"
                              BackgroundColor="Transparent"/>
                </Grid>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding AddMediaCommand}"/>
                </Frame.GestureRecognizers>
            </Frame>
            <!-- Title -->
            <Label Text="Title"
                   FontAttributes="Bold"
                   FontSize="18"
                   Margin="0,10,0,-20"
                   TextColor="White"/>
            <Entry Placeholder="Title of the movie"
                   TextColor="White"
                   PlaceholderColor="LightGray"/>
            <!-- Description -->
            <Label Text="Description"
                   FontAttributes="Bold"
                   FontSize="18"
                   Margin="0,10,0,-20"
                   TextColor="White"/>
            <Entry Placeholder="Whatâ€™s happening?"
                   TextColor="White"
                   PlaceholderColor="LightGray"/>
            <!-- Buttons -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button Text="Cancel"
                        Command="{Binding ToHomePageCommand}"
                        BackgroundColor="White"
                        TextColor="#001233"
                        CornerRadius="20"
                        WidthRequest="100"
                        HeightRequest="50"/>
                <Button Text="Publish"
                        Command="{Binding CreatePostCommand}"
                        BackgroundColor="#00CFD5"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="100"
                        HeightRequest="50"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>